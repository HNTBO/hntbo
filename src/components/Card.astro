---
interface Props {
  title: string;
  href: string;
  image?: string;
  tags?: string[];
  external?: boolean;
}

const { title, href, image, tags = [], external = false } = Astro.props;
---

<a
  href={href}
  class="card group block h-full flex flex-col"
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
>
  <div class="relative overflow-hidden bg-surface" style="aspect-ratio: 16/10;">
    {image ? (
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-text-secondary">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
      </div>
    )}
    {external && (
      <div class="absolute top-2 right-2 bg-background/80 rounded-full p-1.5">
        <svg class="w-3 h-3 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </div>
    )}
  </div>
  <div class="p-4 flex-1 flex flex-col">
    <h3 class="text-lg font-semibold text-text-primary group-hover:text-accent transition-colors line-clamp-2">
      {title}
    </h3>
    {tags.length > 0 && (
      <div class="mt-auto pt-3 flex flex-wrap gap-2">
        {tags.slice(0, 3).map((tag) => (
          <span class="tag text-xs">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>
