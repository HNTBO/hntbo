---
const navLinks = [
  { href: '/', label: 'Home', key: 'home' },
  { href: '/tutos', label: 'Tutos', key: 'tutos' },
  { href: '/tools', label: 'Tools', key: 'tools' },
  { href: '/howiai', label: 'HowIAI', key: 'howiai' },
  { href: '/contact', label: 'Contact', key: 'contact' },
];

const externalLink = { href: 'https://www.fmotion.fr', label: 'FMOTION' };

const currentPath = Astro.url.pathname;

// Helper to check if a nav item is active
const isActive = (href: string, key: string) => {
  if (key === 'home') {
    return currentPath === '/' || currentPath === '';
  }
  return currentPath.startsWith(href);
};
---

<header class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-border">
  <nav class="container flex items-center justify-between h-16">
    <a href="/" class="text-text-primary hover:text-accent transition-colors font-bold text-xl tracking-tight" aria-label="HNTBO home">
      HNTBO
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-8">
      <ul class="flex items-center gap-8">
        {navLinks.map(({ href, label, key }) => (
          <li>
            <a
              href={href}
              class:list={[
                'text-sm font-medium transition-colors',
                isActive(href, key)
                  ? 'text-accent'
                  : 'text-text-secondary hover:text-text-primary'
              ]}
            >
              {label}
            </a>
          </li>
        ))}
        <li>
          <a
            href={externalLink.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm font-medium text-text-secondary hover:text-text-primary transition-colors"
          >
            {externalLink.label}
          </a>
        </li>
      </ul>
    </div>

    <!-- Mobile Menu Button -->
    <div class="md:hidden flex items-center gap-4">
      <button
        id="mobile-menu-btn"
        class="p-2 text-text-secondary hover:text-text-primary"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden border-t border-border">
    <ul class="container py-4 space-y-4">
      {navLinks.map(({ href, label, key }) => (
        <li>
          <a
            href={href}
            class:list={[
              'block text-sm font-medium transition-colors',
              isActive(href, key)
                ? 'text-accent'
                : 'text-text-secondary hover:text-text-primary'
            ]}
          >
            {label}
          </a>
        </li>
      ))}
      <li>
        <a
          href={externalLink.href}
          target="_blank"
          rel="noopener noreferrer"
          class="block text-sm font-medium text-text-secondary hover:text-text-primary transition-colors"
        >
          {externalLink.label}
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
