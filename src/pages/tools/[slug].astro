---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const tools = await getCollection('tools');
  return tools.map((tool) => ({
    params: { slug: tool.slug },
    props: { tool },
  }));
}

const { tool } = Astro.props;
const { Content } = await tool.render();
---

<BaseLayout
  title={tool.data.title}
  description={tool.data.description}
  image={tool.data.image}
>
  <article class="pt-32 pb-16 md:pt-40 md:pb-24">
    <div class="container max-w-4xl">
      <a
        href="/tools"
        class="inline-flex items-center text-text-secondary hover:text-accent transition-colors mb-8"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Tools
      </a>

      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-4">
        {tool.data.title}
      </h1>

      {tool.data.tags && tool.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-8">
          {tool.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}

      <div class="flex flex-wrap gap-4 mb-8">
        {tool.data.isLive && tool.data.livePath && (
          <a
            href={tool.data.livePath}
            class="btn btn-primary inline-flex"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Try Live Demo
          </a>
        )}
        {tool.data.downloadUrl && (
          <a
            href={tool.data.downloadUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary inline-flex"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            {tool.data.downloadLabel || 'Download'}
          </a>
        )}
        {tool.data.githubUrl && (
          <a
            href={tool.data.githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary inline-flex"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        )}
      </div>

      {tool.data.image && (
        <div class="mb-8 rounded-lg overflow-hidden border border-border">
          <img
            src={tool.data.image}
            alt={tool.data.title}
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      )}

      <div class="prose">
        <Content />
      </div>

      <div class="mt-12 p-6 bg-surface rounded-lg border border-border">
        <h3 class="text-xl font-semibold text-text-primary mb-2">Questions or suggestions?</h3>
        <p class="text-text-secondary mb-4">
          Have questions about this tool or want to suggest improvements?
        </p>
        <a href="/contact" class="btn btn-primary">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Get in Touch
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
