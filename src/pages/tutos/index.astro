---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Placeholder - tutorials will be added later
const tutorials = [];
---

<BaseLayout title="Tutos" description="Video tutorials on Houdini, DaVinci Resolve, and creative workflows.">
  <section class="pt-32 pb-16 md:pt-40 md:pb-24">
    <div class="container">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-4">
        Tutorials
      </h1>
      <p class="text-text-secondary text-lg max-w-2xl mb-12">
        Video tutorials on Houdini, DaVinci Resolve, After Effects, and modern creative workflows.
      </p>

      {tutorials.length === 0 ? (
        <div class="text-center py-16 bg-surface rounded-lg border border-border">
          <svg class="w-16 h-16 mx-auto text-text-secondary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <h3 class="text-xl font-semibold text-text-primary mb-2">Coming Soon</h3>
          <p class="text-text-secondary mb-6">
            Tutorials are being organized. Check back soon!
          </p>
          <a
            href="https://www.youtube.com/@hntbo"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary inline-flex"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            Watch on YouTube
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {/* Tutorial cards will go here */}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
