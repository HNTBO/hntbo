---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';

// Get featured tutorials from content collection
const allTutorials = await getCollection('tutorials');
const featuredTutorials = allTutorials
  .filter(t => t.data.featured)
  .sort((a, b) => {
    const dateA = a.data.publishDate ? new Date(a.data.publishDate).getTime() : 0;
    const dateB = b.data.publishDate ? new Date(b.data.publishDate).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 3);

// Get featured tools from content collection
const allTools = await getCollection('tools');
const featuredTools = allTools
  .filter(t => t.data.featured)
  .slice(0, 3);
---

<BaseLayout title="Home" description="How Not To Be Obsolete - Tutorials, tools, and insights for creative professionals navigating AI and modern workflows.">
  <!-- Hero Section -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-24">
    <div class="container">
      <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
        <!-- Profile Image -->
        <div class="shrink-0">
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-surface border-2 border-border overflow-hidden">
            <img
              src="/images/tools/hntbo-profile-pic.jpg"
              alt="HNTBO profile"
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Description -->
        <div class="text-center md:text-left">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text-primary mb-4">
            How Not To Be Obsolete
          </h1>
          <p class="text-text-secondary text-lg md:text-xl max-w-2xl leading-relaxed">
            A journal of a creative professional navigating AI disruption. Tutorials on Houdini, DaVinci Resolve, and modern creative workflows. Tools and resources to stay relevant in an evolving industry.
          </p>
          <div class="mt-6 flex flex-wrap gap-4 justify-center md:justify-start">
            <a href="https://www.youtube.com/@hntbo" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              Subscribe on YouTube
            </a>
            <a href="/tutos" class="btn btn-secondary">
              Browse Tutorials
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Videos Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-text-primary">Featured Videos</h2>
        <a href="/tutos" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          View all &rarr;
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredTutorials.map((tutorial) => (
          <Card
            title={tutorial.data.title}
            href={`/tutos/${tutorial.slug}`}
            image={tutorial.data.thumbnail || `https://img.youtube.com/vi/${tutorial.data.youtubeId}/maxresdefault.jpg`}
            tags={tutorial.data.tags}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Tools Section -->
  <section class="py-16 md:py-24 bg-surface/50">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-text-primary">Featured Tools</h2>
        <a href="/tools" class="text-sm font-medium text-text-secondary hover:text-accent transition-colors">
          View all &rarr;
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredTools.map((tool) => (
          <Card
            title={tool.data.title}
            href={`/tools/${tool.slug}`}
            image={tool.data.image}
            tags={tool.data.tags}
          />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
